<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lazada_product_view_inherit_form_view" model="ir.ui.view">
            <field name="name">lazada_product_view_inherit_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="corsiva_lazada.product_template_inherit_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='lazada_image_ids']" position="attributes">
                    <attribute name="options">{'multiple_images_upload': True}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>