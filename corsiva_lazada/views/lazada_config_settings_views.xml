<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lazada_connector_res_config_settings_inherit_form_view" model="ir.ui.view">
            <field name="name">lazada_connector_res_config_settings_inherit_form_view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="corsiva_lazada" string="Lazada" data-key="corsiva_lazada">
                        <h2>Configuration</h2>
                        <div class="row mt16 o_settings_container" name="lazada_connector_setting">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Store</span>
                                <div class="text-muted">
                                    Default taxes applied to local transactions
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="app_key"/>
                                        <field name="app_key"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="app_secret"/>
                                        <field name="app_secret"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="country"/>
                                        <field name="country"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="language_code"/>
                                        <field name="language_code"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="url"/>
                                        <field name="url"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="callback_url"/>
                                        <field name="callback_url"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="o_form_label col-2 o_light_label" for="authorization_url"/>
                                        <field name="authorization_url"/>
                                    </div>
                                    <br/>
                                    <div class="row mt16">
                                        <div class="col-3">
                                            <button name="action_authorize"
                                                    type="object"
                                                    string="Authorization"
                                                    class="oe_highlight"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="action_lazada_connector_config_settings" model="ir.actions.act_window">
            <field name="name">Lazada Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="base.res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'corsiva_lazada'}</field>
        </record>

        <menuitem id="lazada_connector_menu_root"
                  name="Lazada"
                  web_icon="corsiva_lazada,static/description/icon.png"
                  sequence="100"/>

        <menuitem id="menu_lazada_connector_configuration"
                  name="Configuration"
                  parent="lazada_connector_menu_root"
                  sequence="100"/>

        <menuitem id="menu_lazada_connector_setting"
                  name="Settings"
                  parent="menu_lazada_connector_configuration"
                  action="action_lazada_connector_config_settings"
                  sequence="1"/>

    </data>
</odoo>